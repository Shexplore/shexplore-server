body
  font-family 'Exo 2', "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif

  #body
    margin-top 70px
    padding 10px
  
  header
//    display flex
    align-items center
    a
      color inherit
    nav
      a.nav-toggle
        font-size 1.3em
        -webkit-touch-callout none
        -webkit-user-select none
        -khtml-user-select none
        -moz-user-select none
        -ms-user-select none
        user-select none

        &:hover
          text-decoration none
          cursor pointer
          
    .bd-navbar .nav-link
      float none

    .bd-navbar .nav-link + .nav-link
      margin-left 0
      
  .modal-backdrop
    z-index 2

.js
  nav
    display none
    
@media screen and (min-width: 34em)
  header
    > .clearfix
      display inline-block
    
    nav
      display flex
  
      a
        margin 0 10px